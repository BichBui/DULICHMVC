@model DULICH.Models.Tour_gia

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tour_gia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Chọn Tour</label>
                @Html.DropDownList("tour_id", (IEnumerable<SelectListItem>)ViewBag.tourslist, "--Chọn Tour--", new { @class = "form-control" })
            </div>
           
            <div class="form-group">
                <label class="control-label">Từ ngày</label>
                <input asp-for="gia_tungay" class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Đến ngày</label>
                <input asp-for="gia_denngay" class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Giá</label>
                <input asp-for="gia_sotien" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
